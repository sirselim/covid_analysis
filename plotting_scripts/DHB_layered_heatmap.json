{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/sirselim/covid_analysis/master/data/NZCOVID_confirmed_formatted.json"
  },
  "spacing": 15,
  "bounds": "flush",
  "title": "Breakdown of cases per day across New Zealand District Health Boards",
  "vconcat": [
    {
      "mark": {
        "type": "bar",
        "tooltip": true,
      },
      "height": 60,
      "encoding": {
        "x": {
          "field": "Date of report",
          "type": "nominal",
          "axis": null
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              100
            ]
          },
          "title": ""
        },
        "tooltip": [ 
          { "field": "Date of report", "title": "Date" },
          { "aggregate": "count", "field": "Date of report", "type": "quantitative", "title": "Daily cases" } 
        ]
      }
    },
    {
      "spacing": 15,
      "bounds": "flush",
      "hconcat": [
        {
          "mark": {
            "type": "rect",
            "tooltip": true
          },
          "encoding": {
            "x": {
               "field": "Date of report",
               "type": "nominal",
               "title": "Date of diagnosis"
            },
            "y": {
              "field": "DHB",
              "type": "nominal",
              "title": "District Health Board"
            },
            "color": {
              "aggregate": "count",
              "field": "Date of report",
              "type": "quantitative",
              "title": "Number of cases",
              "scale": { "scheme": "bluepurple" }
            },
            "tooltip": [ 
              { "field": "Date of report", "title": "Date" },
              { "field": "DHB", "title": "District Health Board" },
              { "aggregate": "count", "field": "Date of report", "type": "quantitative", "title": "Daily cases" } 
            ]
          }
        },
        {
          "mark": {
            "type": "bar",
            "tooltip": true
          },
          "width": 60,
          "encoding": {
            "y": {
              "field": "DHB",
              "type": "nominal",
              "axis": null
            },
            "x": {
              "aggregate": "count",
              "type": "quantitative",
              "scale": {
                "domain": [
                  0,
                  200
                ]
              },
              "title": ""
            },
            "tooltip": [ 
              { "field": "DHB", "title": "District Health Board" }, 
              { "aggregate": "count", "field": "DHB", "type": "quantitative", "title": "Total cases" } 
            ]
          }
        }
      ]
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}
