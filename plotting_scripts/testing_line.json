{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "The PM2.5 value of Beijing observed 15 days, highlighting the days when PM2.5 level is hazardous to human health. Data source https://chartaccent.github.io/chartaccent.html",
  "width": 400,
  "height": 500,
  "title": "Number of days between arrival in New Zealand and diagnosis",
  "layer": [
    {
      "data": {
        "url": "../data/arrival_data.json"
      },
      "layer": [
        {
          "mark": {
            "type": "rect",
            "tooltip": true
          },
          "encoding": {
            "y": {
              "field": "Date of report",
              "type": "nominal",
              "title": "Date of diagnosis"
            },
            "x": {
              "field": "Days",
              "type": "nominal",
              "title": "Number of days"
            },
            "color": {
              "aggregate": "count",
              "field": "Days",
              "type": "quantitative",
              "title": "frequency"
            }
          }
        }
      ]
    },
    {
      "data": {
        "values": [{}]
      },
      "mark": "rule",
      "encoding": {
        "x": { "datum": 14, "type": "nominal" },
        "color": { "value": "black" },
        "size": { "value": 2 }
      }
    }
  ]
}
