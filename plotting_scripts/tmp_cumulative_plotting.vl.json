{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 750,
  "height": 250,
  "padding": 5,
  "description": "simple vega-lite chart with linked data",
  "title": "Cumulative COVID cases (confirmed and probable) in NZ DHBs",
  "data": {
    "url": "https://raw.githubusercontent.com/sirselim/covid_analysis/master/data/cumulative_COVID_data.json"
  },
  "layer": [
    {
      "data": { "values": [{}] },
      "mark": { "type": "rect", "tooltip": "level 2 (21st Mar - 23rd March)" },
      "encoding": {
        "x": {
          "datum": { "year": "2020", "month": "Mar", "date": 21 }
        },
        "x2": {
          "datum": { "year": "2020", "month": "Mar", "date": 23 }
        },
        "color": {
          "value": "lightblue"
        },
        "opacity": { "value": 0.1 }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": { "type": "rect", "tooltip": "level 3 (23rd Mar - 25th March)" },
      "encoding": {
        "x": {
          "datum": { "year": "2020", "month": "Mar", "date": 23 }
        },
        "x2": {
          "datum": { "year": "2020", "month": "Mar", "date": 26 }
        },
        "color": {
          "value": "blue"
        },
        "opacity": { "value": 0.05 }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": { "type": "rect", "tooltip": "level 3 (28th Apr - 13th May)" },
      "encoding": {
        "x": {
          "datum": { "year": "2020", "month": "Apr", "date": 28 }
        },
        "x2": {
          "datum": { "year": "2020", "month": "May", "date": 13 }
        },
        "color": {
          "value": "blue"
        },
        "opacity": { "value": 0.05 }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "rect",
        "tooltip": "level 4 - lockdown (26th Mar - 28th April)"
      },
      "encoding": {
        "x": {
          "datum": { "year": "2020", "month": "Mar", "date": 26 }
        },
        "x2": {
          "datum": { "year": "2020", "month": "Apr", "date": 28 }
        },
        "color": {
          "value": "orange"
        },
        "opacity": { "value": 0.1 }
      }
    },
    {
      "mark": {
        "type": "bar",
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Date of report",
          "type": "temporal"
        },
        "y": {
          "field": "Cases",
          "type": "quantitative"
        },
        "color": {
          "value": "steelblue",
          "condition": {
            "test": {
              "field": "Date of report",
              "timeUnit": "yearmonthdate",
              "range": [
                { "year": 2020, "month": "mar", "date": 26 },
                { "year": 2020, "month": "apr", "date": 27 }
              ]
            },
            "value": "orange"
          }
        }
      }
    }
  ]
}
