{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 750,
  "height": 250,
  "padding": 5,
  "description": "simple vega-lite chart with linked data",
  "title": "Cumulative confirmed COVID cases in NZ DHBs",
  "data": {
    "url": "https://raw.githubusercontent.com/sirselim/covid_analysis/master/data/NZCOVID_confirmed_formatted.json"
  },
  "layer": [
    {
      "data": { "values": [{}] },
      "mark": { "type": "rect", "tooltip": "lockdown (26th Mar - 28th April)" },
      "encoding": {
        "x": {
          "datum": { "year": "2020", "month": "Mar", "date": 26 }
        },
        "x2": {
          "datum": { "year": "2020", "month": "Apr", "date": 28 }
        },
        "color": {
          "value": "orange"
        },
        "opacity": { "value": 0.10 }
      }
    },
    {
      "transform": [
        {
          "sort": [{ "field": "Date of report" }],
          "window": [{ "op": "count", "as": "cumulative_count" }],
          "frame": [null, 0]
        }
      ],
      "mark": {
        "type": "bar",
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Date of report",
          "type": "temporal"
        },
        "y": {
          "field": "cumulative_count",
          "type": "quantitative"
        },
        "color": {
          "value": "steelblue",
          "condition": {
            "test": {
              "field": "Date of report",
              "gte": {
                "year": 2020,
                "month": "mar",
                "date": 26
              }
            },
            "value": "orange"
          }
        }
      }
    }
  ]
}
